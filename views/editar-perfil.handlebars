<mian class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" value="{{usuario.nombre}}" placeholder="Tu nombre">
        </div>
        <div class="campo">
            <label>Correo</label>
            <input type="email" name="email" value="{{usuario.email}}" placeholder="Tu Correo">
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Tu Contraseña (opcional)">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen" id="Tu imagen de perfil">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil" alt="Imagen Perfil">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar cambios">
        </div>
    </form>
</mian>